<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bordas"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_registro_emprego_cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargo da Vaga"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/tv_registro_emprego_empresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/tv_registro_emprego_localizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localização da Vaga"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/tv_registro_emprego_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data da criação"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:paddingLeft="10dp" />

</LinearLayout>
